# Agri-Voice API Keys
# Copy this file to .env and add your actual API keys

# MongoDB Connection (Local or Atlas)
# For local MongoDB: mongodb://localhost:27017/agrivoice
# For MongoDB Atlas: mongodb+srv://username:password@cluster.mongodb.net/agrivoice
MONGODB_URI=mongodb://localhost:27017/agrivoice

# JWT Secret for authentication (generate a random string)
JWT_SECRET=your_jwt_secret_key_here_change_in_production

# OpenWeatherMap API - Get from: https://openweathermap.org/api
OPENWEATHER_API_KEY=your_openweathermap_api_key_here

# NewsAPI - Get from: https://newsapi.org/
NEWS_API_KEY=your_newsapi_key_here

# Google Gemini API - Get from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# Trefle.io API (for crop data) - Get from: https://trefle.io/
TREFLE_API_KEY=your_trefle_api_key_here

# Server Configuration
PORT=5000
